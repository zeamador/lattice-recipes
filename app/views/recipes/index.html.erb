<% @title="Search Recipe" %>

<div class="info-extra-bottom">
  <h1>All Recipes</h1>
  <%= form_tag(recipes_path, :method => "get", class: "navbar-form", 
  id: "search-form") do %>
    <div class="input-append">
      Search All Recipes: 
      <%= text_field_tag :search, params[:search], class: "span2", 
	  placeholder: "Title or Tag" %>
      <!-- In order to have the "search" icon int the button, 
	   we need to use plain HTML instead of using a Rails form helper -->
      <button class="btn" type="submit">Search<i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>
  
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <p><%= image_tag(recipe.avatar.thumb.url, alt: recipe.title) %></p>
      <p class="recipe-title"><%= link_to recipe.title, recipe %>
        <% if recipe.secret %>
          [SECRET]
        <% end %>
      </p>
      <p class="recipe-tags"><%= recipe.tags %></p>
    </div>
  <% end %>
  
<!--  <div class="pages">Pages: 1 2 3</div>  # For when we have more recipes -->
</div>
