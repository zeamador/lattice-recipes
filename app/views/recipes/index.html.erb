<% @title="Search Recipe" %>

<div class="search-info">
  <%= form_tag(recipes_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      Search Recipes: 
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Title or Tag" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit">Search<i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>
  
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <p class="recipe-title">Title: <%= link_to recipe.title, recipe %></p>
      <p class="recipe-tags">Tags: <%= recipe.tags %></p>
    </div>
  <% end %>
  
<!--  <div class="pages">Pages: 1 2 3</div>  # For when we have more recipes -->
</div>
