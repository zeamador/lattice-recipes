<%= nested_form_for @recipe do |f| %>
  <%= render 'shared/errors', object: @recipe if @recipe.errors.any? %>
  <p>
    <strong><%= f.label :title %></strong><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <strong><%= f.label :tags %></strong> (separate with commas)<br />
    <%= f.text_field :tags %>
  </p>

  <p>
    <strong><%= f.check_box :secret %> <%= f.label :secret, "Secret" %></strong>
  </p>

  <p>
    <strong><%= f.label :ingredients %></strong>
    <a class="tooltips">
      <img class="question-mark-icon" src="/assets/question-mark-icon.jpg"></img>
      <span>List ingredients each on their own line. Examples:<br>
      1 cup water<br>
      3 apples<br>
      A few dashes of sugar</span>
    </a><br />
    <%= f.text_area :ingredients %>
  </p>

  <div class="steps-container">
    <h3>Steps</h3>
    <% f.fields_for :steps -%>
    <p><%= f.link_to_add "Add Step", :steps %></p>
  </div>
  
  <div class="create-recipe-btn">
    <%= f.submit %>
  </div>
<% end -%>

