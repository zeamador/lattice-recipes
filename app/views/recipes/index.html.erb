<% @title="Search Recipe" %>

  <%= form_tag(recipes_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Recipes" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>

</div>
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <p class="recipe-title">Title: <%= link_to recipe.title, recipe %></p>
      <p class="recipe-tags">tags: <%= recipe.tags %></p>
    </div>
  <% end %>