<fieldset class="ingredient"> 
  <%= f.label :quantity %>: 
  <%= f.number_field :quantity, :class => "number-input-box", step: 0.01 %> 
  <%= f.label :units %>: 
  <% units_array = [] -%>
  <% Units.constants.each do |constant| -%>
    <% units_array << [Units.const_get(constant), Units.const_get(constant)] -%>
  <% end -%>
  <%= f.select(:unit, units_array, { prompt: false }) %>
 
  <%= f.label :description %>: 
  <%= f.text_field :description %>
  <%= f.link_to_remove "Remove ingredient" %>
</fieldset>

