<% @title="Your Recipes" %>

<div class="info-extra-bottom">
  <h1>Your Recipes</h1>
  <%= form_tag(myrecipes_user_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      Search Your Recipes: 
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Title or Tag" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit">Search<i class="icon-search"></i></button>
    </div>
  <% end %>
  <% @my_recipes.each do |recipe| %>
    <div class="recipe">
      <p class="recipe-title"><%= link_to recipe.title, recipe %>
        <% if recipe.secret %>
          [SECRET]
        <% end %>
      </p>
      <p class="recipe-tags"><%= recipe.tags %></p>
    </div>
  <% end %>
</div>
